@model IEnumerable<WebStore.Models.Employee>
@using WebStore.Controllers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудники</title>
</head>
<body>

    <h3>Сотрудники</h3>
    <hr />

    <table>
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>О сотруднике</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a href="/Home/Employee"> @employee.Id</a>
                        @{ 
                            EmployeeController._Employee = employee;
                        }
                    </td>
                    <td>
                        <a href="/Home/Employee">@employee.LastName</a>
                        @{
                            EmployeeController._Employee = employee;
                        }
                    </td>
                    <td>
                        <a href="/Home/Employee">@employee.FirstName</a>
                        @{
                            EmployeeController._Employee = employee;
                        }
                    </td>
                    <td>
                        <a href="/Home/Employee">@employee.Patronymic</a>
                        @{
                            EmployeeController._Employee = employee;
                        }
                    </td>
                    <td>
                        <a href="/Home/Employee">@employee.Age </a>
                        @{
                            EmployeeController._Employee = employee;
                        }
                    </td>
                    <td>
                        <a href="/Home/Employee">@employee.AboutTheEmployee</a>
                        @{
                            EmployeeController._Employee = employee;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/">Домой</a>
</body>
</html>
