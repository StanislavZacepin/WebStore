@model WebStore.Models.Employee
@using WebStore.Controllers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудник</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>Patronymic</th>
                <th>Age</th>
                <th>AboutTheEmployee</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@EmployeeController._Employee.Id</td>
                <td>@EmployeeController._Employee.LastName</td>
                <td>@EmployeeController._Employee.FirstName</td>
                <td>@EmployeeController._Employee.Patronymic</td>
                <td>@EmployeeController._Employee.Age</td>
                <td>@EmployeeController._Employee.AboutTheEmployee</td>
            </tr>

        </tbody>
    </table>
    <a href="/Home/Employees">Назад</a>
</body>
</html>
